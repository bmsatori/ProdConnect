rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    match /chatAttachments/{channelId}/{fileName} {
      allow read, write: if isSignedIn();
    }

    match /gearImages/{fileName} {
      allow read, write: if isSignedIn();
    }

    match /trainingVideos/{fileName} {
      allow read, write: if isSignedIn();
    }
  }
}
